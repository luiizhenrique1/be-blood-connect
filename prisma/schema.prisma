generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  DONOR
  HOSPITAL
}

model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  name  String?
  hospitalName String?
  password String
  role  Role   @default(DONOR)
  location String
  bloodGroup BloodGroup? @default(NOT_DEFINED_YET)
  isAdmin Boolean
  createdAt   DateTime @default(now())
}

enum BloodGroup {
  A_POSITIVE
  A_NEGATIVE
  B_POSITIVE
  B_NEGATIVE
  AB_POSITIVE
  AB_NEGATIVE
  O_POSITIVE
  O_NEGATIVE
  NOT_DEFINED_YET
}
